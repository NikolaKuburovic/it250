<html t:type="layout" title="MetHotels - Forma za unos gostiju"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <head>
        <link rel="stylesheet" href="mybootstrap/css/stil.css"></link>
    </head>
    
    <t:beaneditform object="gost" exclude="id" add="drzId" >
        <p:drzId>
            <t:label for="drzId"/>:
            <t:select t:blankLabel="Odaberi drzavu" t:id="drzId" encoder="encoder" model="drzave" 
                      validate="required"/>
        </p:drzId>
    </t:beaneditform>
    <t:jquery.datatable source="gosti" exclude="" add="edit,delete,drzava" t:options="options" row="onegost"
            reorder="id,ime,prezime,drzava,edit,delete">
        <p:editCell>
            <t:actionlink t:id="edit" context="onegost">Edit</t:actionlink>
        </p:editCell>
        <p:deleteCell>
            <t:actionlink t:id="delete" context="onegost.id">Delete</t:actionlink>
        </p:deleteCell>
        <p:drzavaCell>
            ${drzava}
        </p:drzavaCell>
    </t:jquery.datatable>
    
</html>


  